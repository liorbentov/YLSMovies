<div id="searches" class="tab-pane">
    <h2>My Searches</h2>
    <table id="my-searches">
        <thead>
            <tr>
                <th>Date</th>
                <th>Search String</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
    </table>
</div>
<div id="searches-advance-search" class="tab-pane">
    <h2>Advance Search</h2>
    <form class="form-horizontal" role="form" onsubmit="return false">
        <div class="form-group">
            <label for="movie-name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="movie-name" placeholder="Name">
            </div>
        </div>
        <div class="form-group">
            <label for="movie-year" class="col-sm-2 control-label">Year</label>
            <div class="col-sm-2">
                <input type="number" class="form-control" id="movie-year" min="1900">
            </div>
        </div>
        <div class="form-group">
            <label for="movie-director" class="col-sm-2 control-label">Director</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="movie-director" placeholder="Director">
            </div>
        </div>
        <div class="form-group">
            <label for="movie-stars" class="col-sm-2 control-label">Stars</label>
            <div class="col-sm-1">
                <input type="number" class="form-control" id="movie-stars" min="0" max="5">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" onclick="advanceSearchMovie()">Search</button>
            </div>
        </div>
    </form>
</div>
